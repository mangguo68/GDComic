<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.graduation.design.view.viewmodel.item.history.ItemHistoryVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{vm::onCheckBoxClicked}"
            android:translationZ="1dp"
            android:visibility="@{vm.liveCheckBoxVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/selector_history_checkbox"
            android:visibility="@{vm.liveCheckBoxVisibility}"
            app:isSelected="@{vm.liveCheckBoxState}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{vm.liveHistoryData.name}"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{vm.liveHistoryData.history}"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.liveHistoryData.date}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background_continue"
            android:gravity="center"
            android:onClick="@{vm::onContinueClicked}"
            android:text="续看"
            android:visibility="@{vm.liveCheckBoxVisibility == View.GONE ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:onClick="@{vm::onItemCoverClicked}"
            android:scaleType="centerCrop"
            app:defaultImageResource="@{@drawable/ic_404}"
            app:errorImageResource="@{@drawable/ic_404}"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:networkImage="@{vm.liveHistoryData.cover}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>