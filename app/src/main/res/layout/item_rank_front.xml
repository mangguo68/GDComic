<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.graduation.design.view.viewmodel.item.rank.RankFrontVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(0).comicType}"
            android:textColor="#9b9b9b"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name_center"
            app:layout_constraintStart_toStartOf="@+id/name_center"
            app:layout_constraintTop_toBottomOf="@+id/name_center" />

        <TextView
            android:id="@+id/popularity_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(1).popularity}"
            android:textColor="#FE7272"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/type_center"
            app:layout_constraintStart_toStartOf="@+id/type_center"
            app:layout_constraintTop_toBottomOf="@+id/type_center" />

        <TextView
            android:id="@+id/name_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(0).name}"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_center"
            app:layout_constraintStart_toStartOf="@+id/cv_center"
            app:layout_constraintTop_toBottomOf="@+id/cv_center" />

        <TextView
            android:id="@+id/name_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(2).name}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_right"
            app:layout_constraintStart_toStartOf="@+id/cv_right"
            app:layout_constraintTop_toBottomOf="@+id/cv_right" />

        <TextView
            android:id="@+id/type_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(2).comicType}"
            android:textColor="#9b9b9b"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/name_right"
            app:layout_constraintStart_toStartOf="@+id/name_right"
            app:layout_constraintTop_toBottomOf="@+id/name_right" />

        <TextView
            android:id="@+id/popularity_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(2).popularity}"
            android:textColor="#FE7272"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/type_right"
            app:layout_constraintStart_toStartOf="@+id/type_right"
            app:layout_constraintTop_toBottomOf="@+id/type_right" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_center"
            android:layout_width="114dp"
            android:layout_height="152dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            android:onClick="@{vm::onCenterItemClicked}"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cover_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:defaultImageResource="@{@drawable/ic_404}"
                app:errorImageResource="@{@drawable/ic_404}"
                app:networkImage="@{vm.liveRankData.rankDataFront.get(0).cover}"
                app:srcCompat="@drawable/ic_404" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_right"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="17dp"
            app:cardCornerRadius="12dp"
            android:onClick="@{vm::onRightItemClicked}"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv_center"
            app:layout_constraintStart_toEndOf="@+id/cv_center">

            <ImageView
                android:id="@+id/cover_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:defaultImageResource="@{@drawable/ic_404}"
                app:errorImageResource="@{@drawable/ic_404}"
                app:networkImage="@{vm.liveRankData.rankDataFront.get(2).cover}"
                app:srcCompat="@drawable/ic_404" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_left"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginEnd="17dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:onClick="@{vm::onLeftItemClicked}"
            app:layout_constraintBottom_toBottomOf="@+id/cv_center"
            app:layout_constraintEnd_toStartOf="@+id/cv_center">

            <ImageView
                android:id="@+id/cover_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:defaultImageResource="@{@drawable/ic_404}"
                app:errorImageResource="@{@drawable/ic_404}"
                app:networkImage="@{vm.liveRankData.rankDataFront.get(1).cover}"
                app:srcCompat="@drawable/ic_404" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(1).name}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_left"
            app:layout_constraintStart_toStartOf="@+id/cv_left"
            app:layout_constraintTop_toBottomOf="@+id/cv_left" />

        <TextView
            android:id="@+id/type_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(1).comicType}"
            android:textColor="#9b9b9b"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/name_left"
            app:layout_constraintStart_toStartOf="@+id/name_left"
            app:layout_constraintTop_toBottomOf="@+id/name_left" />

        <TextView
            android:id="@+id/popularity_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="@{vm.liveRankData.rankDataFront.get(1).popularity}"
            android:textColor="#FE7272"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/type_left"
            app:layout_constraintStart_toStartOf="@+id/type_left"
            app:layout_constraintTop_toBottomOf="@+id/type_left" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="10dp"
            android:rotation="45"
            android:translationX="12dp"
            android:translationY="-12dp"
            app:layout_constraintEnd_toEndOf="@+id/cv_center"
            app:layout_constraintTop_toTopOf="@+id/cv_center"
            app:srcCompat="@drawable/ic_crown" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="10dp"
            android:rotation="45"
            android:translationX="12dp"
            android:translationY="-12dp"
            app:layout_constraintEnd_toEndOf="@+id/cv_left"
            app:layout_constraintTop_toTopOf="@+id/cv_left"
            app:srcCompat="@drawable/ic_crown_sliver" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="10dp"
            android:rotation="45"
            android:translationX="12dp"
            android:translationY="-12dp"
            app:layout_constraintEnd_toEndOf="@+id/cv_right"
            app:layout_constraintTop_toTopOf="@+id/cv_right"
            app:srcCompat="@drawable/ic_crown_copper" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>