<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GDUpdate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#003700B3</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.selected">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.unselected">
        <item name="android:textSize">16sp</item>
    </style>
</resources>